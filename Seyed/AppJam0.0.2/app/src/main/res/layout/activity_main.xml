<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TextView
        android:id="@+id/titletxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="course-name"
        android:textSize="24sp"
        android:id="@+id/course"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/titletxt"
        android:layout_alignParentLeft="true" />

    <AutoCompleteTextView
        android:id="@+id/autocomplete_course"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:layout_below="@+id/course"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <Button
        android:id="@+id/titlebutton"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="title"
        android:layout_above="@+id/descbutton"
        android:layout_alignRight="@+id/autocomplete_course"
        android:layout_alignEnd="@+id/autocomplete_course"
        android:layout_marginBottom="79dp" />

    <TextView
        android:id="@+id/desctxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_below="@+id/autocomplete_course"
        android:layout_toRightOf="@+id/course"
        android:layout_toEndOf="@+id/course"
        android:layout_marginTop="59dp" />

    <Button
        android:id="@+id/descbutton"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="course fetch"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/autocomplete_course"
        android:layout_alignEnd="@+id/autocomplete_course"
        android:layout_marginBottom="58dp" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/listView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/desctxt"
        android:layout_above="@+id/titlebutton"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />


</RelativeLayout>
